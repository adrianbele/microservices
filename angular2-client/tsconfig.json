{
    "version": "1.5.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "sourceMap": true
    },
    "files": [
        "./app/app.ts",
        "./app/components/*/*.ts",
        "./app/utils/*.ts",
        "./app/init.ts",
        "./app/services/*/*.ts",
        "./typings/angular2/angular2.d.ts",
        "./typings/angular2/router.d.ts",
        "./typings/custom.system.d.ts",
        "./typings/es6-promise/es6-promise.d.ts",
        "./typings/rx/rx-lite.d.ts",
        "./typings/rx/rx.d.ts",
        "./typings/tsd.d.ts"
    ],
    "filesGlob": [
        "./app/**/*.ts",
        "./typings/**/*.ts"
    ]
}
